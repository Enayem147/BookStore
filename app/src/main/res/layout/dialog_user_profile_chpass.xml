<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/profile_layout_width"
    android:layout_height="@dimen/profile_change_layout_height"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/profile_padding">

    <TextView
        android:id="@+id/txtProf_Thoat"
        android:layout_width="@dimen/profile_exit_width"
        android:layout_height="@dimen/profile_exit_height"
        android:layout_gravity="end"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/profile_margin"
        android:background="@drawable/border_book_detail"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/profile_padding">


        <EditText
            android:maxLength="12"
            android:id="@+id/txtProfEdit_OldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_pass_invisible"
            android:hint="@string/mk_cu"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/profile_value_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/profile_divide_margin"
            android:layout_marginTop="@dimen/profile_divide_margin"
            android:background="@color/colorPrimaryDark" />

        <EditText
            android:maxLength="12"
            android:id="@+id/txtProfEdit_NewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_pass_invisible"
            android:hint="@string/mk_moi"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/profile_value_text_size" />

        <EditText
            android:maxLength="12"
            android:id="@+id/txtProfEdit_NewPassConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_text_margin_top"
            android:drawableRight="@drawable/ic_pass_invisible"
            android:hint="@string/mk_moi_conf"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/profile_value_text_size" />

        <Button
            android:id="@+id/btnProf_XN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/profile_btn_margin_top"
            android:background="@color/colorPrimary"
            android:text="@string/xac_nhan"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>