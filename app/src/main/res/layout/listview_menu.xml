<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:gravity="center">
    <LinearLayout
        android:layout_marginTop="@dimen/menu_left_img_margin"
        android:layout_marginBottom="@dimen/menu_left_img_margin"
        android:layout_weight="2"
        android:layout_width="@dimen/menu_left_layout_width"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView_TheLoai"
            android:layout_margin="@dimen/menu_left_img_margin"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/menu_left_img_margin"
        android:layout_marginBottom="@dimen/menu_left_img_margin"
        android:layout_weight="8"
        android:layout_width="@dimen/menu_left_layout_width"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/txt_TheLoai"
        android:textSize="@dimen/menu_left_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>