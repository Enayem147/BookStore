<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:gravity="center"
        android:layout_width="@dimen/dialog_complete_width"
        android:layout_height="@dimen/dialog_complete_height"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dialog_complete_icon_width"
            android:layout_height="@dimen/dialog_complete_icon_height"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <TextView
            android:layout_marginTop="@dimen/dialog_complete_value_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cam_on"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_complete_title_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_complete_field_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ma_don_hang"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dialog_complete_text_size" />

            <TextView
                android:textColor="@color/red"
                android:id="@+id/txtInvoiceComp_MaHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_complete_value_margin_top"
                android:textSize="@dimen/dialog_complete_text_size" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_complete_field_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ngay_lap_don"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dialog_complete_text_size" />

            <TextView
                android:textColor="@color/red"
                android:id="@+id/txtInvoiceComp_NgayLap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_complete_value_margin_top"
                android:textSize="@dimen/dialog_complete_text_size" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>