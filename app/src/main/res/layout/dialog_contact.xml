<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="470dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/profile_padding"
    android:paddingBottom="@dimen/contact_margin_bottom">

    <TextView
        android:id="@+id/txtContact_Thoat"
        android:layout_width="@dimen/profile_exit_width"
        android:layout_height="@dimen/profile_exit_height"
        android:layout_gravity="end"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_title_margin_bottom"
        android:layout_marginTop="@dimen/profile_title_margin_top"
        android:gravity="center"
        android:text="@string/thong_tin_lien_he"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/profile_title_text_size"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/profile_margin"
            android:background="@drawable/border_book_detail"
            android:orientation="vertical"
            android:padding="@dimen/profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_text_margin_top_1st"
                android:layout_marginBottom="@dimen/profile_title_margin_bottom"
                android:text="@string/lien_he_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/profile_field_text_size"
                android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lien_he_sdt_l"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/profile_field_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:text="@string/lien_he_sdt_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/profile_field_text_size" />


                <TextView
                    android:layout_marginTop="@dimen/contact_margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lien_he_email_l"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/profile_field_text_size"
                    android:textStyle="bold" />
                <TextView
                    android:text="@string/lien_he_email_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/profile_field_text_size" />
            <TextView
                android:layout_marginTop="@dimen/contact_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lien_he_diachi_l"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/profile_field_text_size"
                android:textStyle="bold" />
            <TextView
                android:text="@string/lien_he_diachi_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/profile_field_text_size" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>