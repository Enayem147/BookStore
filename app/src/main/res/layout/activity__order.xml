<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderActivity"
    android:orientation="vertical"
    android:layout_gravity="center">
    <include
        android:id="@+id/toolbarOrder"
        layout="@layout/layout_toolbar"
        >
    </include>
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_width="@dimen/invoice_logo_width"
        android:layout_height="@dimen/invoice_logo_height" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/invoice_layout_margin_top"
        >

        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:background="@drawable/ic_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtOrder_MaHD"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/invoice_text_margin_left"
                android:layout_gravity="center"
                android:textSize="@dimen/invoice_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="@dimen/invoice_layout_edit_text_size"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/icon_menu_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtOrder_Ten"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/invoice_text_margin_left"
                android:textSize="@dimen/invoice_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="@dimen/invoice_layout_edit_text_size"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:background="@drawable/icon_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtOrder_SDT"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/invoice_text_margin_left"
                android:layout_gravity="center"
                android:textSize="@dimen/invoice_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="@dimen/invoice_layout_edit_text_size"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/icon_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtOrder_DiaChi"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/invoice_text_margin_left"
                android:layout_gravity="center"
                android:textSize="@dimen/invoice_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/ic_invoice_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/listView_Order"
                android:layout_marginLeft="@dimen/invoice_lis_view_margin_left"
                android:layout_width="@dimen/invoice_list_view_width"
                android:layout_height="@dimen/invoice_list_view_height"></ListView>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/invoice_layout_margin_left"
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/ic_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtInvoice_Total"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/invoice_text_margin_left"
                android:layout_gravity="center"
                android:textSize="@dimen/invoice_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/invoice_layout_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/btnOrder_DatHang"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:text="@string/xac_nhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>