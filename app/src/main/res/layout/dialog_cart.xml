<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/text_size_30sp"
            android:text="@string/nhap_so_luong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp">
            <Button
                android:id="@+id/btnNhap_Tru"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_20sp"
                android:text="@string/tru"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/txtNhap_SL"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold"
                android:text="1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnNhap_Cong"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_20sp"
                android:text="@string/cong"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btnNhap_XN"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/xac_nhan"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>