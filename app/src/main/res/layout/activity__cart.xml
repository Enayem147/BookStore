<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Activity_Cart"
    android:background="#FFF"
    android:orientation="vertical"
    android:weightSum="100">
        <include
            android:id="@+id/toolbar_Cart"
            layout="@layout/layout_toolbar">
        </include>
    <LinearLayout
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#2979FF"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:text="Giỏ hàng trống"
                android:id="@+id/txt_emptyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/listView_Cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="30"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtCart1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:text="Tổng : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#D50000"
                android:textSize="30sp"
                android:id="@+id/txtCart_TongTien"
                android:text="100000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtCart2"
                android:textStyle="bold"
                android:textColor="#D50000"
                android:textSize="30sp"
                android:text=" đ"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnCart_ThanhToan"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:text="Đặt hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnCart_TiepTuc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:text="Tiếp tục mua hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>