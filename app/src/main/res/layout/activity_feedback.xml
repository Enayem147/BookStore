<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context=".activity.FeedbackActivity">

    <include
        android:id="@+id/toolbar_Feedback"
        layout="@layout/layout_toolbar"></include>

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="10dp"
            android:background="@drawable/border_book_detail"
            android:id="@+id/imgFeedback"
            android:layout_width="140dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border_book_detail">

            <TextView
                android:id="@+id/txtFeedBack_Ten"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_book_name_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/detail_book_name_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/detail_book_name_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_Feedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnFeedback_Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cart_btn_margin_bottom"
            android:layout_marginTop="@dimen/cart_btn_margin_top"
            android:background="@color/colorPrimary"
            android:text="Gửi đánh giá"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>